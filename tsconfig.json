{
	"compilerOptions": {
		"target": "ES2020",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"esModuleInterop": true,
		"strict": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"outDir": "./dist",
		"rootDir": "./",
		"sourceMap": true
	},
	"include": ["**/*.ts", "eslint.config.js", "config/env.ts", "types"],
	"exclude": ["node_modules", "dist"]
}
